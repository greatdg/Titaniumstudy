<Alloy>
	<Window title='Mate List' id='listWin' barColor="#9BEAE8">
	<View class="container">
		
		<TableView id='listTable' filterAttribute="text" dataCollection="people" dataTransform='transformfunction' editable='true'>
			<SearchBar barColor="#FFF" hintText="Search" id="listSearch" showCancel="false" height="43" top="0" ></SearchBar>
			<TableViewRow no='{no}' height='55' >
				<ImageView image='default_icon.png' left='15' width='45' height='45' />
				<ImageView image="{PicName}" width='64' height='69' left='5' />
				<Label id='listList' text='{title}' class='listList'></Label>
			</TableViewRow>
				
			</TableView>
	</View>
	</Window>
</Alloy>