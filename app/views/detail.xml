<Alloy>
	<Window title="Detail" barColor="#559BEAE8">	
		<RightNavButton>
			<Button title="Edit" onClick="clickEdit"/>
		</RightNavButton>
	
	<View id="detailView" top="2">
	<ScrollView id="scrollView" width="100%" showVerticalScrollIdicator="true" showHorizontalScrollIndicator="false">	
	<View  class="container" >

		
		<View class="upperView">
											
				<ImageView id="facePic" class="person" image="default100.png" />

			<View class="personalView">
				<!-- name, birthday, phone numberand gender -->

				<View class="rowPersonal" layout="vertical">
				<Label class="upper_title" text="Name"></Label>
				</View>
				
				<View class="rowPersonal" layout="vertical">
				<Label id="name" class="upper_text" layout="vertical" />
				</View>
				
				<View class="rowPersonal">
				<Label class="upper_title" text="Gender "></Label>
				</View>	
				
				<View class="rowPersonal" layout="vertical">
				<Label id="gender" class="upper_text" layout="vertical"/>
				</View>
	
				<View class="rowPersonal">
				<Label id="bdayPersonal" class="upper_title" text="Birthday "></Label>
				</View>		
				
				<View class="rowPersonal" layout="vertical">
				<Label id="birthday" class="upper_text" />
				</View>	
						
			</View>			

		</View>
	</View>
		
	<View id="lowerView" class="lowerView">	
		
				<View class="rowAdditional">
					<Label id="phonePersonal" class="upper_title" text="Phone " />
					<Label id="phoneNumber" class="upper_text" onClick="phoneClick"/>
				</View>
		
				<View class="rowAdditional">
					<Label id="jobAdd" class="upper_title" text="Job" />
					<Label id="job" class="upper_text" />
				</View>		
				
				<View class="rowAdditional">
					<Label class="upper_title" text="Email" />
					<Label id="email" class="upper_text" onClick="emailClick" />
				</View>
				
				<View class="rowAdditional">
					<Label class="upper_title" text="Address " />
					<Label id="address1" class="upper_text" />
				</View>

				<View class="rowAdditional">
				<Label class="uuper_title" text="     "></Label>
				<Label id="address2" class="upper_text"/>
				</View>

				<View class="rowAdditional">
				<Label class="upper_title" text="      "></Label>
				<Label id="address3" class="upper_text" />
				</View>
				
				
				<View class="rowAdditional" visible="false">
				<Label class="titleAdditional" text="Custom"></Label>
				<TextField class="inputBox" id="customAdd" value=""/>			
				</View>

	</View>	
	
	<View id="customAddView" visible="false">

		<!-- <Label id="customAdd" visible="false" value=""></Label>	 -->
		<View class="rowAdditional" />	
		
			<View class="rowAdditional">
				<Label class="titleAdditional" text="  Category"></Label>	
				<Label id="customAddCategory" />			
			</View>	
			<View class="rowAdditional">
				<Label class="titleAdditional" text="  Contents"></Label>	
				<Label id="customAddContent" hintText="Contents"/>			
			</View>			
		
	</View>

	</ScrollView>
	
	</View>	

	</Window>
</Alloy>