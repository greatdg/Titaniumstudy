<Alloy>
	<Window title="Detail" barColor="#559BEAE8">	
		<RightNavButton>
			<Button title="Edit" onClick="clickEdit"/>
		</RightNavButton>
	
	<ScrollView id="scrollView" showVerticalScrollIdicator="true" showHorizontalScrollIndicator="false">	
		<View class="upperView">
			<View class="profileImg">
				<ImageView id="facePic" class="person" image="default_icon.png" />

				<View class="personalView">
					<Label id="name" class="name"/>					
					<Label id="gender" class="personCommon" />
			
					<Label id="birthday" class="personCommon" />
				</View>							
			</View>	

		</View>
		<View id="lowerView" class="lowerView">
			<View class="margin">	
				<ImageView class="lblImg" image="edit/phone.png" />
				<Label id="phoneNumber" class="lLbl" onClick="phoneClick"/>
			</View>
			<View class="margin">	
				<ImageView class="lblImg" image="edit/job.png" />
				<Label id="job" class="lLbl" />
			</View>
			<View class="margin">	
				<ImageView class="lblImg" image="edit/email.png" />
				<Label id="email" class="lLbl" onClick="emailClick" />
			</View>

			<View class="margin">
				<ImageView class="lblImg" image="edit/home.png" />
				<Label id="address1" class="lLbl" />
			</View>

			<View id="viewAddr2" class="margin">				
				<Label id="address2" class="lLblAddr" />
			</View>

			<View id="viewAddr3" class="margin">
				<Label id="address3" class="lLblAddr" />
			</View>


		</View>

		<View id="addViewField" class="addViewField"></View>
		
		<View class="space"></View>

	</ScrollView>

	</Window>
</Alloy>