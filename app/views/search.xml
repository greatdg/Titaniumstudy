<Alloy>
	<Window title="Search">
		<View class="container" layout="vertical" bacgroundColor="blue">
			<View class="firstMenu" layout="horizontal" width="100%">
				<Button id="btn_Appearance" backgroundImage="appearance.png" width="110" left="40" top="5" />
				<Button id="btn_byText" backgroundImage="textSearch.png" width="110" left="30" top="5"/>	
				<ImageView id="leftDot" image="dot.png" left="-166" top="11" height="22" width="22" />
				<ImageView id="rightDot" image="dot.png" left="39" top="11" height="22" width="22" visible="false" />				
			</View>	
			
			<View id="byTextView" visible="false" height="170" layout="vertical">
							
				<Label top="20" left="30" width="70%" text="Category?"/>
				<TextField id="searchCondition" left="30" width="70%" backgroundColor="white" hintText="Name" editable="false"/>				
				
				<Label top="10" left="30" width="70%" text="Word?"/>
				<TextField id="searchTextInput" left="30" width="70%" backgroundColor="white" hintText="red wine"/>
				<Button id="btn_byTextSearch" backgroundImage="searchBtn.png" top="-100" left="245" width="60" height="60" />

			</View>		

			<View id="viewImageEditCategory" visible="true">
		
					<ImageView class="person" id="personImageEdit" image="default_default_default.png">								
							<Label id="picName" color="white" top=50 text="picName" visible="true" ></Label>	
							<Label id="picHairName" color="white" top="70" text="hairName" visible="true" ></Label>					
							<Label id="picExtraName" color="white" top="90" text="extraName" visible="true"></Label>																						
					</ImageView>			
						
					<Button id="btn_faceEditCategory" backgroundImage="faceBtn.png" top="30" left="8"/>
					<Button id="btn_hairEditCategory" backgroundImage="hairBtn.png" top="30" left ="4" />
					<Button id="btn_extraEditCategory" backgroundImage="extraBtn.png" top="30" left ="4" />
					<Button id="btn_doneEdit" backgroundImage="searchBtn.png" top="16" width="60" height="60"left="26"/>

			</View>
			
								
			<View id="lowPickerView" background="black" top="-40" height="200">
				
				<View id="searchConditionPicker" top="0" visible="false">
					<Toolbar width="100%" height="30" id="toolbar" barColor="#DDD"></Toolbar>
					<Picker id="imageFacePicker" selectionIndicator="true" useSpinner="true">
							<PickerColumn>
								<PickerRow title="name"/>
			                	<PickerRow title="gender"/>
			                	<PickerRow title="phoneNumber"/>
			                	<PickerRow title="job"/>
			                	<PickerRow title="address"/>
			                	<PickerRow title="custom"/> 		                	                 	              	                	
			                </PickerColumn>  
					</Picker>
				</View>				
							
				
				<View id="faceImagePicker" top="0" visible="false">
						<Picker id="imageFacePicker" selectionIndicator="true" useSpinner="true">
				                	  
								<PickerColumn id="skinColor">
									<PickerRow title=""/>
				                	<PickerRow customTitle="black">
				                		<ImageView image="black__.png" />
				                	</PickerRow>
				                	<PickerRow customTitle="yellow">
				                		<ImageView image="yellow__.png"/>
				                	</PickerRow>	
				                	<PickerRow customTitle="white" >
				                		<ImageView image="yellow__.png"/>
				                	</PickerRow>	                 	              	                	
				                </PickerColumn>  
				                
								<PickerColumn id="faceShape">
									<PickerRow title=""/>
				                	<PickerRow title="egg"/>
				                	<PickerRow title="round"/>
				                	<PickerRow title="square"/>
				                </PickerColumn>               	
				 
				 				<PickerColumn id="eyeShape">
									<PickerRow title=""/>
				                	<PickerRow title="narrow"/>
				                	<PickerRow title="normal"/>
				                	<PickerRow title="big"/>
				                </PickerColumn>               	                                        				
						</Picker>
				</View>
			
					
				<View id="hairImagePicker" top="0" visible="false">
			
					<Picker id="imageHairPicker" selectionIndicator="true" useSpinner="true">
							<PickerColumn id="hairStyle">
								<PickerRow title=""/>
			                	<PickerRow title="gentleman"/>
			                	<PickerRow title="boy"/>
			                	<PickerRow title="long"/>
			                	<PickerRow title="curly"/>
			                    <PickerRow title="ppippi"/>            	
			                </PickerColumn>               	
			                	  
							<PickerColumn id="hairColor">
								<PickerRow title=""/>
			                	<PickerRow title="blond"/>
			                	<PickerRow title="black"/>
			                	<PickerRow title="red"/>                	              	                	
			                </PickerColumn>                             				
					</Picker>
				</View>
			
				<View id="extraImagePicker" top="0" visible="false">
						<Picker id="imageExtraPicker" selectionIndicator="true" useSpinner="true">             	  
								<PickerColumn id="extraGlasses">
									<PickerRow title="none"/>
				                	<PickerRow title="roundGlasses"/>
				                	<PickerRow title="squareGlasses"/>
				                	<PickerRow title="sunGlasses"/>                 	              	                	
				                </PickerColumn>  
				                
								<PickerColumn id="extraMustache">
									<PickerRow title=""/>
				                	<PickerRow title="underNose"/>
				                	<PickerRow title="chin"/>
				                	<PickerRow title="both"/>
				                </PickerColumn>               	
				          	                                        				
						</Picker>             	                                        				
				</View>
			</View>
				
		</View>
	</Window>
</Alloy>