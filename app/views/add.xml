<Alloy>
	<Window id="addWin" title = "Add mate" modal="true">	

		<RightNavButton title ="Add" text="Add" >

			<Button title="Add" onClick="addItemDone"/>
		</RightNavButton>
		
		<LeftNavButton>
			<Button title="Cancel" onClick="cancleAdd"/>
		</LeftNavButton>
		

	<ScrollView id="scrollView" width="100%" height="100%" showVerticalScrollIdicator="true" showHorizontalScrollIndicator="false">	
	<View  class="container" id="container" top ="0" height="260" >

		
		<View class="upperView" >
			<!-- <View class="emoticonView"> -->
				<!-- emoticon area -->

											
				<ImageView class="person" id="person" >

									
									
					<Label id="picName" color="white" top="50" text="picName" visible="false" ></Label>	
					<Label id="picHairName" color="white" top="70" text="hairName" visible="false" ></Label>					
					<Label id="picExtraName" color="white" top="90" text="extraName" visible="false"></Label>										
									
			 		<Button id="btn_imageEdit" backgroundImage="editIcon.png" top="100" left="80" width="30" height="30" />							
				</ImageView>			
							
													
			<!-- </View> -->
			<View class="personalView" top ="7">
				<!-- name, birthday, phone numberand gender -->

				<View class="rowPersonal">
				<ImageView image="N.png" height="16" />	
				<TextField class="inputBox" height="17" id="nameAdd" value="" hintText="Name"/ >
				</View>
				
				<View class="rowPersonal">
				<ImageView image="G.png" height="16" />						
				<TextField class="inputBox" height="17" id="genderAdd" hintText="Gender" editable="false"/>
				</View>	
	
				<View class="rowPersonal">
				<ImageView image="B.png" height="16" />						
				<TextField class="inputBox" height="17" id="bdayAdd" hintText="Birthday" editable="false"/>
				</View>			

				<View class="rowPersonal">
				<ImageView image="P.png" height="16" />						
				<TextField class="inputBox" height="17" id="phoneAdd" hintText="Phone Number" keyboardType="Titanium.UI.KEYBOARD_PHONE_PAD"/>
				</View>
				
				<View class="rowPersonal">
				<ImageView image="e.png" height="16" />					
				<TextField class="inputBox" height="17" id="emailAdd" hintText="email" />
				</View>		
					
			</View>
				<!-- personal View 		 -->
		</View>
			<!-- upper View  -->


	<View id="lowerView" class="lowerView">			
				<View class="rowPersonal">
				<Label id="jobAdd" text="Job "></Label>
				<TextField class="inputBox" height="17" id="jobAdd" hintText="student" />
				</View>	
			
				<View class="rowAdditional">
				<Label class="titleAdditional" text="  Address "></Label>
				<TextField class="inputBox" height="17" id="addressAdd" hintText="4 March Place"/>
				</View>
<!-- 
				<View class="rowAdditional">
				<Label class="titleAdditional" text="     "></Label>
				<TextField class="inputBox" height="17" id="address2Add" hintText="Belfast"/>
				</View>

				<View class="rowAdditional">
				<Label class="titleAdditional" text="      "></Label>
				<TextField class="inputBox" height="17" id="address3Add" hintText="Christchurch"/>
				</View> -->
				
				<Button id="btn_addMore" backgroundImage ="more.png" left="260" height="40" width="40" />	
				
				
	// Additional custom category ???		

				<View height="3" visible="false">
				<TextField class="inputBox" height="17" id="customAdd" value=""/>			
				</View>			
				
							
		</View>	
			 <!-- lower View  -->
	
	</View>
		<!-- Container  -->
		

	</ScrollView>

		
	<View id="viewDatePicker" top="150" visible="false">
		<Toolbar width="100%" height="30" id="toolbar" barColor="#DDD"></Toolbar>
		<Picker id="datepicker" selectionIndicator="true" useSpinner="true" >            
        </Picker>
	</View>
		<!-- datePicker  -->


	<View id="customAddView" visible="false">

		<!-- <Label id="customAdd" visible="false" value=""></Label>	 -->
		<View class="rowAdditional" />	
		
		<View class="rowAdditional">
		<Label class="titleAdditional" text="  Category"></Label>	
		<TextField class="inputBox" id="customAddCategory" hintText="Title"/>			
		</View>	
		<View class="rowAdditional">
		<Label class="titleAdditional" text="  Contents"></Label>	
		<TextField class="inputBox" id="customAddContent" hintText="Contents"/>			
		</View>			
		
		<Button id="doneCustomAdd" top="10" backgroundImage="done_more.png" width="60" height="60"/>		
	</View>
	
	
	
	<View id="viewDatePicker" visible="false">
		<Toolbar width="100%" height="30" id="toolbar" barColor="#DDD"></Toolbar>
		<Picker id="datePicker" selectionIndicator="true" useSpinner="true"></Picker>
	</View>
	


	<View id="viewGenderPicker" visible="false">
		<Toolbar width="100%" height="30" id="toolbar" barColor="#DDD"></Toolbar>
		<Picker id="genderPicker" selectionIndicator="true" top="150" useSpinner="true" >
				<PickerColumn id="column1">
					<PickerRow title=""/>
                	<PickerRow title="Male"/>
                	<PickerRow title="Female"/>
            </PickerColumn>				
		</Picker>
	</View>


	<View id="viewImageEditCategory" visible="false">
		<View id="categoryMenu">
										
				<ImageView class="person" id="personImageEdit" top="80">
				</ImageView>			

			<Button id="btn_faceEditCategory" backgroundImage="faceBtn.png" top="120" left="12"/>
			<Button id="btn_hairEditCategory" backgroundImage="hairBtn.png" top="120" left ="5" />
			<Button id="btn_extraEditCategory" backgroundImage="extraBtn.png" top="120" left ="5" />
			<Button id="btn_doneEdit" backgroundImage="done.png" top="100" width="70" left="7" height="70"/>
		</View>
	</View>

	<View id="hairImagePicker" top=130 visible="false">

		<Picker id="imageHairPicker" selectionIndicator="true" useSpinner="true">
				<PickerColumn id="hairStyle">
					<PickerRow title=""/>
                	<PickerRow title="gentleman"/>
                	<PickerRow title="boy"/>
                	<PickerRow title="long"/>
                	<PickerRow title="curly"/>
                    <PickerRow title="ppippi"/>            	
                </PickerColumn>               	
                	  
				<PickerColumn id="hairColor">
					<PickerRow title=""/>
                	<PickerRow title="blond"/>
                	<PickerRow title="black"/>
                	<PickerRow title="red"/>                	              	                	
                </PickerColumn>                             				
		</Picker>
	</View>

	<View id="faceImagePicker" top=130 visible="false">

		<Picker id="imageFacePicker" selectionIndicator="true" useSpinner="true">
                	  
				<PickerColumn id="skinColor">
					<PickerRow title=""/>
                	<PickerRow customTitle="black">
                		<ImageView image="black__.png" />
                	</PickerRow>
                	<PickerRow customTitle="yellow">
                		<ImageView image="yellow__.png"/>
                	</PickerRow>	
                	<PickerRow customTitle="white" >
               			<ImageView image="yellow__.png"/>  
               		</PickerRow>	              	                 	              	                	
                </PickerColumn>  
                
				<PickerColumn id="faceShape">
					<PickerRow title=""/>
                	<PickerRow title="egg"/>
                	<PickerRow title="round"/>
                	<PickerRow title="square"/>
                </PickerColumn>               	
 
 				<PickerColumn id="eyeShape">
					<PickerRow title=""/>
                	<PickerRow title="narrow"/>
                	<PickerRow title="normal"/>
                	<PickerRow title="big"/>
                </PickerColumn>               	                                        				
		</Picker>
	</View>


	<View id="extraImagePicker" top="130" visible="false">
		<Picker id="imageExtraPicker" selectionIndicator="true" useSpinner="true">             	  
				<PickerColumn id="extraGlasses">
					<PickerRow title="none"/>
                	<PickerRow title="roundGlasses"/>
                	<PickerRow title="squareGlasses"/>
                	<PickerRow title="sunGlasses"/>                 	              	                	
                </PickerColumn>  
                
				<PickerColumn id="extraMustache">
					<PickerRow title=""/>
                	<PickerRow title="underNose"/>
                	<PickerRow title="chin"/>
                	<PickerRow title="both"/>
                </PickerColumn>               	
          	                                        				
		</Picker>
	</View>




	
	</Window>
</Alloy>